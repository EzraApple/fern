{
  "name": "fern",
  "version": "0.1.0",
  "description": "Self-improving headless AI agent with multi-channel support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "tsc && node --env-file=.env dist/index.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "tsc": "tsc --noEmit",
    "knip": "knip",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:memory": "vitest run src/memory/",
    "test:workspace-github": "vitest run src/core/workspace src/core/github-service",
    "test:server-channels": "vitest run src/server/ src/channels/",
    "test:core-tools": "vitest run src/core/agent src/core/prompt src/config/",
    "test:scheduler": "vitest run src/scheduler/ src/server/scheduler-api src/server/channel-api",
    "ci": "pnpm run lint && pnpm run tsc",
    "start:prod": "pnpm run build && pm2 start ecosystem.config.cjs",
    "stop:prod": "pm2 stop fern",
    "logs": "pm2 logs fern",
    "memory:wipe": "rm -rf ~/.fern/memory ~/.fern/sessions ~/.local/share/opencode/storage && echo 'Full wipe: memory DB, archives, sessions, OpenCode storage.'",
    "dashboard": "pnpm --filter @fern/dashboard dev",
    "dashboard:build": "pnpm --filter @fern/dashboard build"
  },
  "keywords": ["ai", "agent", "llm", "telegram", "whatsapp", "self-improving"],
  "author": "Ezra Apple",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "@hono/node-server": "^1.13.0",
    "@octokit/app": "^16.1.2",
    "@octokit/rest": "^22.0.1",
    "@opencode-ai/plugin": "^1.1.53",
    "@opencode-ai/sdk": "^1.1.53",
    "better-sqlite3": "^12.6.2",
    "cron-parser": "^5.5.0",
    "hono": "^4.6.0",
    "json5": "^2.2.0",
    "openai": "^6.18.0",
    "opencode-ai": "^1.1.53",
    "p-queue": "^9.1.0",
    "sqlite-vec": "0.1.7-alpha.2",
    "twilio": "^5.12.1",
    "ulid": "^2.4.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "knip": "^5.0.0",
    "pm2": "^6.0.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
