{
  "name": "jarvis",
  "version": "1.0.0",
  "description": "Jarvis - Local-first AI assistant for software development",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "jarvis": "dist/index.js"
  },
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsx --tsconfig tsconfig.json src/index.ts",
    "dev:webhooks": "tsx --tsconfig tsconfig.json src/webhook-server.ts",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "start:webhooks": "node -r tsconfig-paths/register dist/webhook-server.js",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "knip": "knip",
    "knip:fix": "knip --fix --allow-remove-files"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "@octokit/auth-app": "^8.1.2",
    "@opencode-ai/plugin": "^1.1.23",
    "@opencode-ai/sdk": "^1.1.23",
    "commander": "^12.1.0",
    "express": "^5.2.1",
    "octokit": "^5.0.5",
    "opencode-ai": "^1.1.23",
    "undici": "^7.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.6",
    "@types/node": "^22.19.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "knip": "^5.46.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "opencode",
    "ai",
    "agents",
    "local-first"
  ],
  "author": "",
  "license": "MIT"
}
